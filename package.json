{
  "name": "@sajari/sdk-js",
  "version": "1.0.0-alpha",
  "description": "JavaScript SDK for the Sajari search API",
  "scripts": {
    "prebuild": "rimraf dist*",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "docs": "typedoc src  --mode file --out docs --exclude \"**/*+(.test).ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json --fix \"src/**/*.ts\"",
    "test": "jest"
  },
  "main": "dist.cjs/index.js",
  "module": "dist.es/index.js",
  "files": [
    "README.md",
    "LICENSE",
    "dist*/*+(.js|.d.ts|.map)"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/sajari/sajari-sdk-js.git"
  },
  "keywords": [
    "sajari",
    "search",
    "search api",
    "match",
    "recommend",
    "realtime",
    "autocomplete",
    "instant",
    "hosted"
  ],
  "homepage": "https://github.com/sajari/sajari-sdk-js",
  "bugs": "https://github.com/sajari/sajari-sdk-js/issues",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^23.0.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.59.1",
    "rollup-plugin-typescript2": "^0.14.0",
    "rollup-plugin-uglify": "^4.0.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3"
  },
  "contributors": [
    {
      "name": "Sajari Support <support@sajari.com>",
      "url": "https://www.sajari.com"
    },
    {
      "name": "Trent Billington",
      "email": "tbillington@sajari.com",
      "url": "https://www.sajari.com"
    },
    {
      "name": "David Howden",
      "email": "dhowden@sajari.com",
      "url": "https://www.sajari.com"
    }
  ],
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
