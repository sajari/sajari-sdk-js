{
  "name": "@sajari/sdk-js",
  "version": "1.0.0-rc.5",
  "description": "Sajari JavaScript SDK",
  "scripts": {
    "prebuild": "rimraf dist*",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "docs": "typedoc src/index.ts --mode file --out docs --exclude \"**/*+(.test).ts\"",
    "prelint": "npm-run-all type-check",
    "lint": "tslint -p tsconfig.json -c tslint.json --fix \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "pretest": "npm-run-all type-check",
    "test": "jest",
    "prepublishOnly": "npm-run-all type-check build"
  },
  "main": "dist.cjs/index.js",
  "module": "dist.es/index.js",
  "types": "dist.types/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "dist*"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/sajari/sajari-sdk-js.git"
  },
  "keywords": [
    "sajari",
    "search",
    "search api",
    "match",
    "recommend",
    "realtime",
    "autocomplete",
    "instant",
    "hosted"
  ],
  "homepage": "https://github.com/sajari/sajari-sdk-js",
  "bugs": "https://github.com/sajari/sajari-sdk-js/issues",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "jest": "^23.1.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.59.1",
    "rollup-plugin-typescript2": "^0.14.0",
    "rollup-plugin-uglify": "^4.0.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.1"
  },
  "contributors": [
    {
      "name": "Sajari Support <support@sajari.com>",
      "url": "https://www.sajari.com"
    },
    {
      "name": "Trent Billington",
      "email": "tbillington@sajari.com",
      "url": "https://www.sajari.com"
    },
    {
      "name": "David Howden",
      "email": "dhowden@sajari.com",
      "url": "https://www.sajari.com"
    },
    {
      "name": "Ben Hinchley",
      "email": "bhinchley@sajari.com",
      "url": "https://www.sajari.com"
    }
  ],
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
