{
  "name": "sajari",
  "version": "0.20.0",
  "description": "JavaScript SDK for the Sajari search API",
  "scripts": {
    "prebuild": "rimraf dist*",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest"
  },
  "module": "dist.es/main.js",
  "main": "dist.cjs/main.js",
  "files": [
    "README.md",
    "LICENSE",
    "dist*"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/sajari/sajari-sdk-js.git"
  },
  "keywords": [
    "sajari",
    "search",
    "search api",
    "match",
    "recommend",
    "realtime",
    "autocomplete",
    "instant",
    "hosted"
  ],
  "homepage": "https://github.com/sajari/sajari-sdk-js",
  "bugs": "https://github.com/sajari/sajari-sdk-js/issues",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "jest": "^22.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.56.5",
    "rollup-plugin-typescript2": "^0.12.0",
    "rollup-plugin-uglify": "^3.0.0",
    "ts-jest": "^22.4.1",
    "typedoc": "^0.11.1",
    "typescript": "^2.7.2"
  },
  "contributors": [
    {
      "name": "Sajari Support <support@sajari.com>",
      "url": "https://www.sajari.com"
    },
    {
      "name": "Trent Billington",
      "email": "tbillington@sajari.com",
      "url": "https://www.sajari.com"
    },
    {
      "name": "David Howden",
      "email": "dhowden@sajari.com",
      "url": "https://www.sajari.com"
    }
  ],
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
